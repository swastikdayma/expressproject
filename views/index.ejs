<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fuzzy+Bubbles&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
   <%- include('../partials/header.ejs')%>

    <section id="banner">
      <div class="container pb-3">
        <div class="row">
          <div class="col-md-8">
            <h3 class="text-center"><%=record.title%></h3>
            <p><%=record.desc%></p>
            <a href="/banner"><button>More Details</button></a>
          </div>
          <div class="col-md-4">
            <img src="/upload/<%=record.img%>" class="img-fluid d-block mx-auto" alt="" id="banner-img">
          </div>
        </div>
      </div>
      <img src="media/border1.png" alt="">
    </section>

    <section id="about">
      <div class="container">
        <h3>About Us</h3>
        <div class="row text-center">
          <%servicedata.forEach((result)=>{%>
            <div class="col-md-3">
              <div class="card">
                <img src="/upload/<%=result.img%>" class="card-img-top rounded mx-auto d-block" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=result.title%></h5>
                  <p class="card-text"><%=result.desc%></p>
                  <a href="/servicedetails/<%=result.id%>"><button class="btn btn-primary ">More Details</button></a>
                </div>
              </div>
            </div>
          <%})%>
          
          
          
          
        

        </div>
      </div>
    </section>
    
   <section id="testi">
      <div class="container">
        <div class="row">
          <h3 class="text-center">Testinominals</h3>
          <%testidata.forEach((result)=>{%>
          <div class="col-md-3">
            <img src="/upload/<%=result.img%>" alt="" class="rounded mx-auto d-block">
            <p class="text-center"><i class="bi bi-quote"></i><%=result.testi%><i class="bi bi-quote"></i></p>
            <p class="text-center"><%=result.cname%></p>
          </div>
            <%})%>
            
          
      
        </div>
      </div>
    </section>
   
   

    <%- include('../partials/footer.ejs')%>


    
    


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>