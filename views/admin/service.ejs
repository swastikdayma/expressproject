<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/css/style.css">

</head>
<body>
 <%- include('../../partials/admin/header.ejs')%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2>service</h2>
                    <table class="table table:table-hover">
                        <tr>
                            <th> services: <%=totalservices%></th>
                            <th> publish: <%=publishservices%></th>
                            <th>unpublish: <%=unpublishservices%></th>
                        </tr>
                    </table>
                    <a href="/admin/serviceadd"><button class="btn btn-success form-control">Add Service here</button></a>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No.</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Desc</th>
                            <th>Ldesc</th>
                            <th>Posted Date</th>
                            <th>Status</th>
                            <th>Delete</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><img style="width: 100px;" src="/upload/<%=result.img%>" alt=""></td>
                                <td><%=result.title%></td>
                                <td><%=result.desc%></td>
                                <td><%=result.ldesc%></td>
                                <td><%=result.posteddate%></td>
                                <%if(result.status=='publish'){%>
                                <td><a href="/admin/servicestatus/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                                <%}else{%>
                                    <td><a href="/admin/servicestatus/<%=result.id%>"><button class="btn btn-primary"><%=result.status%></button></a></td>
                                <%}%>
                                <td><a href="/admin/servicedelete/<%=result.id%>"><button class="btn btn-danger">Delete</button></a></td>

                            </tr>
                        <%})%>
                        <%if(record.length==0){%>
                       <tr><th colspan="8" class="text-center">No Record Found</th></tr>
                   <%}%>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>