<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/css/style.css">

</head>
<body>
 <%- include('../../partials/admin/header.ejs')%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2>User Management</h2>
                    <table class="table table-hover">
                        <tr>
                            <th>S.NO.</th>
                            <th>Username</th>
                            <th>Created date</th>
                            <th>User Status</th>
                            <th>Role</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.username%></td>
                                <td><%=result.createdDate%></td>
                                <%if(result.status=='suspended'){%>
                                 
                                <td><a href="/admin/userstatus/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                                <%}else{%>
                                    
                                <td><a href="/admin/userstatus/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td> 
                                <%}%>
                                <%if(result.role=='pvt'){%>
                                <td><a href="/admin/roleupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.role%></button></a></td>
                            <%}else{%>
                                <td><a href="/admin/roleupdate/<%=result.id%>"><button class="btn btn-success"><%=result.role%></button></a></td>
                            <%}%>
                                
                            </tr>
                        <%})%>
                      
                      

                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>