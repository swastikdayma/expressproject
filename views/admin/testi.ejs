<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/css/style.css">

</head>
<body>
 <%- include('../../partials/admin/header.ejs')%>
    <section id="mid">
        <div class="container">
            <div class="row">
                <%- include('../../partials/admin/left.ejs')%>
                <div class="col-md-9">
                    <h2>Testi Management</h2>
                    <table class="table table-hover">
                        <tr>
                            <th>Total: <%=totalcount%></th>
                            <th>publish: <%=publishcount%></th>
                            <th>unpublish: <%=unpublishcount%></th>
                        </tr>
                    </table>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No.</th>
                            <th>Image</th>
                            <th>Testi</th>
                            <th>CName</th>
                            <th>Posteddate</th>
                            <th>Status</th>
                            <th>Delete</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td> <img style="width: 100px;" src="/upload/<%=result.img%>" alt=""></td>
                                <td><%=result.testi%></td>
                                <td><%=result.cname%></td>
                                <td><%=result.posteddate%></td>
                                <%if(result.status=='publish'){%>
                                <td><a href="/admin/statusupdate/<%=result.id%>"><button class="btn btn-success"><%=result.status%></button></a></td>
                            <%}else{%>
                                <td><a href="/admin/statusupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.status%></button></a></td>
                            <%}%>
                                <td><a href="/admin/delete/<%=result.id%>"><button class="btn btn-danger">Delete</button></a></td>
                            </tr>
                        <%})%>
                        <%if(record.length==0){%>
                        <tr><th colspan="7" class="text-center">NO RECORD FOUND</th></tr>
                    <%}%>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <%- include('../../partials/admin/footer.ejs')%>
</body>
</html>